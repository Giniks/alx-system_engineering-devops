#!/usr/bin/env bash

# Bash script to install and configure Nginx on Ubuntu

# Update the package lists for available software packages
apt-get update

# Install Nginx
apt-get install -y nginx

# Create a simple "Hello World!" HTML page
echo "Hello World!" > /var/www/html/index.html

# Set Nginx to listen on port 80 and serve files from the /var/www/html directory.
printf %s "server {
     listen      80;
     listen      [::]:80 default_server;
     root        /etc/nginx/html;
     index       index.html index.htm;
}
" > /etc/nginx/sites-available/default

# Check if Nginx is already running, and if not, start it
if ! pgrep nginx > /dev/null; then
    service nginx start
fi

# Check the Nginx status
if pgrep nginx > /dev/null; then
    echo "Nginx is running and listening on port 80."
else
    echo "Nginx is not running or failed to start."
fi

